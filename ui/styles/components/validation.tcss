/* Styles for validation system */
@import "config.tcss";

/* Error messages */
.validation-error {
    color: $danger;
    padding: $spacing-sm;
    margin-top: $spacing-xs;
    font-size: $font-size-sm;
    display: none;
}

.validation-error.visible {
    display: block;
    animation: fade-in $transition-normal;
}

/* Error indicators */
Input.validation-error, TextArea.validation-error {
    border-color: $danger;
}

/* Success indicators */
Input.validation-success, TextArea.validation-success {
    border-color: $success;
}

/* Validation in progress */
Input.validating, TextArea.validating {
    border-color: $info;
}

/* Cross-field validation */
.cross-field-error {
    border-color: $warning;
}

/* Animations */
@keyframes fade-in {
    from {
        opacity: 0;
        transform: translateY(-$spacing-sm);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Validation notifications */
#validation-notification {
    background: $dark;
    color: $light;
    padding: $spacing-md;
    margin: $spacing-sm;
    border-radius: $border-radius-md;
}

#validation-notification.error {
    background: $danger;
}

#validation-notification.warning {
    background: $warning;
}

#validation-notification.info {
    background: $info;
}
